{
  "name": "VoaTube",
  "description": "Assistidor de youtube sempre no topo",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "version": "0.1",
  "offline_enabled": false,
  "content_security_policy": "script-src https://gdata.youtube.com/ 'self'",
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions" : [
    "alwaysOnTopWindows",
    "webview",
    "fullscreen",
    "https://i.ytimg.com/"
  ],
  "icons": {
    "16": "assets/youtube.png",
    "128": "assets/youtube.png"
  }
}
